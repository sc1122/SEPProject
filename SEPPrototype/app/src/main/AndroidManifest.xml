<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uts.sep.tcba.sepprototype">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controller_Authentication"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller_StudentMenu"
            android:label="@string/title_activity_studentmenu" />
        <activity
            android:name=".Controller_MakeBooking"
            android:label="@string/title_activity_makebooking"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Controller_TutorMenu"
            android:label="@string/title_activity_controller__tutor_menu"
            android:parentActivityName=".Controller_Authentication">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uts.sep.tcba.sepprototype.Controller_Authentication" />
        </activity>
        <activity android:name=".Controller_MakeAvailability"></activity>
    </application>

</manifest>